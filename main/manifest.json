{
	"manifest_version": 2,
	"name": "Imgur Community Extension",
	"author": "Mark Muego",
	"description": "A Chrome extension made by and for the Imgur Community.",
	"version": "1.1",
	"icons": { 
		"128": "icon128.png"
	},
	"permissions": [
		"storage",
		"webRequest",
		"webRequestBlocking",
		"*://*.imgur.com/*"
	],
	"content_scripts": [
		{
			"matches": ["*://*.imgur.com/*"],
			"js": ["jquery-2.2.2.min.js", "icepage.js"],
			"css": ["ice.css"],
			"run_at": "document_end"
		}
	],
	"background": {
		"persistent": true,
		"page": "icebg.html",
		"js": "icebg.js"
	}
}
